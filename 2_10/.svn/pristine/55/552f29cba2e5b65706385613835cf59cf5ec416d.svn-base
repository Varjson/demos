		<script type="text/javascript">
			//选择男女时前面圆圈变色
			var sex = document.querySelectorAll('#sex i');
			for(var i =0 ; i<sex.length; i++){
				console.log(sex);
				sex[i].onclick = function(){
					for(var j =0 ;j<sex.length; j++){
